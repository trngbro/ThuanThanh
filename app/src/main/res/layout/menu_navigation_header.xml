<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp" >

    <TextView
        android:id="@+id/txt_menu_tennv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_slogan"
        android:layout_marginLeft="20dp"
        android:text="Xin chào!"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:text="Thuận Thành"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_menu_tennv"
        android:layout_alignLeft="@id/txt_menu_tennv"
        android:src="@drawable/pic_logo" />

</RelativeLayout>