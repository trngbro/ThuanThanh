<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:layout_margin="10px"
        android:paddingBottom="20dp"
        android:background="@color/colorPrimary" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_customstaff_HinhNV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_border_width="3dp"
            app:civ_circle_background_color="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_customstaff_HinhNV"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/txt_customstaff_TenNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Trung Nghĩa"
                android:gravity="left"
                android:fontFamily="@font/muli_black"
                android:textSize="24sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_customstaff_TenQuyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản Lý"
                android:gravity="left"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/muli" />

            <TextView
                android:id="@+id/txt_customstaff_SDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SĐT: 0947 605 644"
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/muli"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_customstaff_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52000693@tdtu.edu.vn"
                android:gravity="left"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/muli" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>